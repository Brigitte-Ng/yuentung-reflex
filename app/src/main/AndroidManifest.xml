<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.reflex_app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleUserActivity"
            android:label="@string/title_activity_single_user"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.cs.reflex_app.MainActivity" />
        </activity>
        <activity
            android:name=".GameShowActivity"
            android:label="@string/title_activity_game_show"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.cs.reflex_app.MainActivity" />
        </activity>
        <activity
            android:name=".ViewStatsActivity"
            android:label="@string/title_activity_view_stats"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.cs.reflex_app.MainActivity" />
        </activity>
        <activity
            android:name=".TimingActivity"
            android:label="@string/title_activity_timing"
            android:parentActivityName=".SingleUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.cs.reflex_app.SingleUserActivity" />
        </activity>
        <activity
            android:name=".TwoPlayersBuzzerActivity"
            android:label="@string/title_activity_two_players_buzzer"
            android:parentActivityName=".GameShowActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.cs.reflex_app.GameShowActivity" />
        </activity>
        <activity
            android:name=".ThreePlayersBuzzerActivity"
            android:label="@string/title_activity_three_players_buzzer" >
        </activity>
        <activity
            android:name=".FourPlayersBuzzerActivity"
            android:label="@string/title_activity_four_players_buzzer" >
        </activity>
    </application>

</manifest>
