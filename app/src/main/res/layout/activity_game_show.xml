<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.reflex_app.GameShowActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please choose the number of players:"
        android:id="@+id/buzzerInstr"
        android:layout_alignParentStart="true"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Players"
        android:id="@+id/twoPlayers"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/threePlayers"
        android:onClick="goTwoBuzzers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Players"
        android:id="@+id/threePlayers"
        android:textSize="50dp"
        android:layout_below="@+id/twoPlayers"
        android:layout_alignStart="@+id/fourPlayers"
        android:onClick="goThreeBuzzers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Players"
        android:id="@+id/fourPlayers"
        android:textSize="50dp"
        android:layout_below="@+id/threePlayers"
        android:layout_centerHorizontal="true"
        android:onClick="goFourBuzzers" />

</RelativeLayout>
